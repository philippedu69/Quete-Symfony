{% extends 'base.html.twig' %}

{% block title %}Actor{% endblock %}

{% block body %}
    <h1>{{ actor.name }}</h1>

    <div class="row">
        <div>
            <img class="mr-5" src="/uploads/{{ actor.picture }}">
        </div>
        <div>
            <h3>Séries associées</h3>
            <ul>
                {% for program in actor.programs %}

                    <li>
                        <a href="{{ path('wild_show_program') ~ "/" ~ program.title|lower|replace({" ": "-"}) }}">{{ program.title }}</a>
                    </li>
                {% else %}
                    <li>Aucune série pour cet acteur</li>
                {% endfor %}
            </ul>
        </div>
    </div>

    <a class="btn btn-secondary mt-3" href="{{ path('actor_index') }}">{{ 'back to list'|trans }}</a>

    <a class="btn btn-secondary mt-3" href="{{ path('actor_edit', {'slug': actor.slug}) }}">edit</a>

    {{ include('actor/_delete_form.html.twig') }}
{% endblock %}
