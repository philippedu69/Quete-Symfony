{% extends 'base.html.twig' %}

{% block title %}Programme{% endblock %}

{% block body %}

    <div class="media">
        <img class="align-self-start mr-4" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.summary }}</p>
            <p>Categorie : {{ program.category.name }}</p>
            <ul>
                {% for season in seasons %}
                    <li>
                        {{ season.number }} - {{ season.year }}
                        <p><a href="{{ path('wild_showSeason', {'id': season.id}) }}">{{ season.description }}</a></p>
                    </li>
                {% endfor %}
            </ul>
            <h3>Acteurs associés</h3>
            <ul>
                {% for actor in program.actors %}
                    <li><a href="{{ path('wild_showActor', {'id': actor.id}) }}">{{ actor.name }}</a></li>
                {% else %}
                    <li>Aucun acteur pour cette série</li>
                {% endfor %}
            </ul>
        </div>
    </div>



{% endblock %}