{% extends 'base.html.twig' %}

{% block title %}Programme{% endblock %}

{% block body %}

    <div class="media mt-5 ml-3">
        <img class="align-self-start mr-4" src="{{ program.poster }}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p class="w-50">{{ program.summary }}</p>
            <div class="description mt-3">
                <div class="categoryName mr-5">
                    <h3>Categorie : {{ program.category.name }}</h3>
                    <ul>
                        {% for season in seasons %}
                            <li>
                                {{ season.number }} - {{ season.year }} - <a
                                        href="{{ path('wild_showSeason', {'id': season.id}) }}">{{ season.description }}</a>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
                <div class="actors ml-5">
                    <h3>Acteurs associés</h3>
                    <ul>
                        {% for actor in program.actors %}
                            <li><a href="{{ path('wild_showActor', {'id': actor.id}) }}">{{ actor.name }}</a></li>
                        {% else %}
                            <li>Aucun acteur pour cette série</li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    </div>



{% endblock %}